extends layout

block content
  each conf, repo in db.cIDs
    h3= repo
    a(href=`/log/${repo.split('.git')[0]}`) cached builds
    table
      thead
        tr
          th name
          th cmd
      tbody
        each filter in conf.filters
          tr
            td= filter.name
            td
              code= filter.cmd
    form(action="/fakewebhook" method="POST")
      input(type="text" name="sha" placeholder="sha")
      input(type="hidden" name="repo" value=repo)
      input(type="submit" value="execute build against SHA")
    h4 post-merge hook
    pre
      code= conf.hook
    form(action='refresh' method="POST")
      input(type="hidden" name="repo" value=repo)
      input(type="submit" value="git fetch, pull, and deploy!")
