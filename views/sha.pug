extends layout

block content
  p
    a(href=`/log/${domain}/${repo}/${branch}/${sha}`) logs
  h2
    = sha
    =" vs. "
    a(href=`/cid/${domain}/${repo}/${branch}`)
      =domain.replace('_', ".")
      |/
      =repo.replace('_', "/")
      |#
      =branch

  table
    caption results
    thead
      tr
        th
        th pre
        th steps
        th post
        th forcibly run
    tbody
      tr
        td integration
        td
          |checkout & build:
          if integratePreExit == 0
            | ‚úî
          else if Number.isInteger(Number(integratePreExit))
            a(href=`./log/${domain}/${repo}/${branch}/${sha}/integrate/pre.exit`) ‚ùå
          else
            a(href=`./log/${domain}/${repo}/${branch}/${sha}/integrate/pre.exit`) ‚Åâ
        td
          for filter in filters
            li
              = filter.name
              if filter.exit == 0
                | ‚úî
              else if Number.isInteger(Number(filter.exit))
                a(href=`/log/${domain}/${repo}/${branch}/${sha}/integrate/tests/${filter.name}.exit`) ‚ùå
              else
                form(action=`/pkill/${domain}/${repo}/${branch}/${sha}/${filter.name}` method='post')
                  input(type="hidden" name="success" value=true)
                  button(type="submit") üëç
                form(action=`/pkill/${domain}/${repo}/${branch}/${sha}/${filter.name}` method='post')
                  input(type="hidden" name="success" value=false)
                  button(type="submit") üëé

        td
          |commit: ‚úî
        td
          form(action="/fakewebhook" method="POST")
            input(type="hidden" name="sha" placeholder="sha" value=sha)
            input(type="hidden" name="repo" value=`${domain.replace('_', ".")}:${repo.replace('_', "/")}.git#${branch}`)
            input(type="submit" value='üîÑ')
      tr
        td deployment
        td
          |pull:
          if integratePreExit == 0
            | ‚úî
          else if Number.isInteger(Number(integratePreExit))
            a(href=`./log/${domain}/${repo}/${branch}/${sha}/integrate/pre.exit`) ‚ùå
          else
            a(href=`./log/${domain}/${repo}/${branch}/${sha}/integrate/pre.exit`) ‚Åâ
        td
          for postHook in postHooks
            li
              = postHook.name
              if postHook.exit == 0
                | ‚úî
              else if Number.isInteger(Number(postHook.exit))
                a(href=`/log/${domain}/${repo}/${branch}/${sha}/deploy/posthooks/${postHook.name}.exit`) ‚ùå
              else
                a(href=`/log/${domain}/${repo}/${branch}/${sha}/deploy/posthooks/${postHook.name}.exit`) ‚Åâ
        td
          |commit: ‚úî
        td
          form(action="/fakewebhook" method="POST")
            input(type="hidden" name="sha" placeholder="sha" value=sha)
            input(type="hidden" name="repo" value=`${domain.replace('_', ".")}:${repo.replace('_', "/")}.git#${branch}`)
            input(type="submit" value='üîÑ')


